%>
<div id="component_details" >
  <% if @processors.count > 0 %>
    <p id="feedback">
      <span id="select-result">Select a component to view its description</span>
    </p>
    <%= render :partial => 'taverna_lite/workflow_ports/edit_inputs' %>
    <%= render :partial => 'taverna_lite/workflow_ports/edit_outputs' %>
    <% @processors.each do |proc| %>
    <div id="<%= proc.name %>_component" class="div_component"
      style="display: none;">
      <dl>
        <dt>
          Processor Name:
        </dt>
        <dd>
          <%= proc.name%>
        </dd>
        <dt>
          Type:
        </dt>
        <dd>
          <%= proc.type%>
        </dd>
        <dt>
          Description:
        </dt>
        <dd>
          <%= proc.description%>
        </dd>
        <% if @wf_components.count > 0 %>
          <% wfc = @wf_components[proc.name][0] -%>
          <dt>
            Component Name:
          </dt>
          <dd>
            <%= wfc.name%>
          </dd>
          <dt>
            Family:
          </dt>
          <dd>
            <%= wfc.family%>
          </dd>
          <dt>
            Registry:
          </dt>
          <dd>
            <%= wfc.registry%>
          </dd>
          <dt>
            Version:
          </dt>
          <dd>
            <%= wfc.version%>
          </dd>
          <% unless @wf_components[proc.name][1].nil? -%>
            <% cwf = @wf_components[proc.name][1] -%>
            <dt>
              Description:
            </dt>
            <dd>
              <%= cwf.description %>
            </dd>
            <dt>
              Author:
            </dt>
            <dd>
              <%= cwf.author%>
            </dd>
            <dt>
              Registry ID:
            </dt>
            <dd>
              <%= cwf.my_experiment_id %>
            </dd>
          <% end%>
        <% end -%>
      </dl>
    </div>
    <% end %>
  <% end %>
</div>
