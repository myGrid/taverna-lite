<% if @processors.count>0 %>
<div id="component_list" style="float: left; width: 24%; padding: 0.4em;">
  <div id="default_operation" class="div_alternative" >
    <p id="feedback">
      <span id="select-op">Select a component to view allowed operations</span>
    </p>
  </div> <!--id="default_operation"-->
  <div id="no_op_alternative" class="div_alternative" style="display:none;">
    <p id="feedback">
      <span id="select-op">No operations available for selected component</span>
    </p>
  </div><!--id="no_op_alternative"-->
  <%= render :partial => 'taverna_lite/workflow_components/annotation_instructions'%>
  <%= render :partial => 'taverna_lite/workflow_ports/input_instructions'%>
  <%= render :partial => 'taverna_lite/workflow_ports/output_instructions'%>
  <% @component_alternatives.each do |ca| %>
    <div id="<%=ca[0]%>_alternatives" class="div_alternative" style="display:none;">
      <%unless ca[1].count==0 %>
      <b>
        The selected component <%=ca[0]%> can be replaced.
      </b>
      <br/>
      To replace the component just:
      <ol>
        <li>
          Select a component from the alternative components below.
        </li>
        <li>
          Click on the "Replace" button of one of the alternative components.
        </li>
      </ol>
      <b>NOTE:</b> The component will be replaced immediately and the changes
      saved into the workflow file.
      <h3>Alternatives to <%=ca[0]%></h3>
      <ol id="replaceable">
      <% ca[1].each do |item| %>
        <% componentname = item[0].name %>
        <li class="ui-widget-content" id="<%= item[0].name%>">
          <div style="float: left;width:20%">
            <%= image_tag "taverna_lite/taverna-component-05.png", :size => "48x48", :alt => "WS",
              :class=>"componenticon" %>
          </div> <!--image div -->
          <div class="desc_div">
            <b><%= componentname %>(V.<%= item[0].version %>)</b><br/>
            <b>Family:</b><%= item[0].family %><br/>
            <b>Registry: </b><%= item[0].registry %><br/>
            <b>Description: </b><%= item[1].title %><br/>
            <%= form_for :file_uploads,
              :url => {:controller => 'workflow_components', :action => 'replace'},
              :html => {:multipart => true}, :disable_with => "Saving..."  do |f| %>
              <%= hidden_field_tag "processor_name", ca[0] %>
              <%= hidden_field_tag "component_id", item[0].id %>
              <%= hidden_field_tag "workflow_id", @workflow.id %>
              <div title="Replace selected component"
                alt="Replace selected component"
                style="float:center; padding:10px;">
                  <%= submit_tag 'Replace' %>
              </div> <!--buton div -->
            <% end -%> <!--form-->
          </div> <!--description div -->
        </li>
      <% end %>
      </ol>
      <%else%>
        There are no alternatives for the selected component
      <%end%>
    </div>
<% end %>
</div> <!-- id="component_list" -->
<%end %>
