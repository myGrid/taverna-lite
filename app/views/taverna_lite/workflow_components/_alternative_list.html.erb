%>
<div id="component_operations" >
  <div id="default_operation" class="div_alternative" style="width:95%; display: none;" >
    <p id="feedback">
      <span id="select-op">Select a component to view allowed operations</span>
    </p>
  </div> <!--id="default_description"-->
  <%= render :partial => 'taverna_lite/workflow_ports/input_instructions'%>
  <%= render :partial => 'taverna_lite/workflow_ports/output_instructions'%>
  <% @component_alternatives.each do |ca| %>
    <div id="<%=ca[0]%>_alternatives" class="div_alternative"
      style="display:none; width:95%;">
      <%unless ca[1].count==0 then %>
        <b>
          The selected component <%=ca[0]%> can be replaced.
        </b>
        <br/>
        To replace a component:
        <ol>
          <li>
            Select a component from the alternatives below.
          </li>
          <li>
            Click on the "Replace" button of the selected component.
          </li>
        </ol>
        <h3>Alternatives for <%=ca[0]%>:</h3>
        <% ca[1].each do |item| %>
          <% componentname = item[0].name %>
          <div class="replaceable" id="<%= item[0].name%>">
            <span style="float: left;width:20%">
              <%= image_tag "taverna_lite/taverna-component-05.png",
                :size => "48x48", :alt => "<<COMPONENT>>",
                :class=>"componenticon" %>
            </span> <!--image div -->
            <span class="desc_div">
              <b><%= componentname %>(V.<%= item[0].version %>)</b><br/>
              <b>Family:</b><%= item[0].family %><br/>
              <b>Registry: </b><%= item[0].registry %><br/>
              <b>Description: </b><%= item[1].title %><br/>
            </span> <!--description div -->
            <span class="action_div">
              <%= form_for 'replace_#{componentname}',
                :url => {:controller => 'workflow_components', :action => 'replace'},
                :html => {:multipart => true}, :disable_with => "Saving..."  do |f| %>
              <%= hidden_field_tag "processor_name", ca[0] %>
              <%= hidden_field_tag "component_id", item[0].id %>
              <%= hidden_field_tag "workflow_id", @workflow.id %>
                <span title="Replace selected component"
                  alt="Replace selected component"
                  style="float:center; padding:5px;margin-top: 3px;">
                    <%= submit_tag 'Replace' %>
                </span> <!--buton div -->
              <% end -%> <!--form-->
            </span>
          </div><!--component alternative div-->
        <% end %>
        <b>NOTE:</b> The component will be replaced immediately and the changes
        saved into the workflow file.
      <%else -%>
        <h3>
          Processor can be annotated
        </h3>
        Basic Annotation:
        <ol>
          <li>
            Changing the processor name.
          </li>
          <li>
            Editing/Adding a description for the processor.
          </li>
        </ol>
          <ul>
            <li>
              Click "Save" to save processor annotation
            </li>
          </ul>
          <b>NOTE:</b> The annotations will be saved to the workflow file
      <%end -%>
    </div>
  <% end %>
</div> <!-- id="component_operations_list" -->
