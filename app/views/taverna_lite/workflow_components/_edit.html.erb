 <style>
#feedback { font-size: 1.4em; }
#selectable .ui-selecting { background: #FECA40; }
#selectable .ui-selected { background: #F39814; color: white; }
#selectable { list-style-type: none; margin: 0; padding: 0; width: 25%; }
#selectable div { margin: 3px; padding: 0.4em; font-size: 1.4em; height: 60px; }
</style>
<script>
  $(function() {
    $( "#selectable" ).selectable({
      stop: function() {
        var result = $( "#select-result" ).empty();
        $( ".ui-selected", this ).each(function() {
          var index = $( "#selectable li" ).index( this );
          result.append( " #" + ( index + 1 ) );
        });
      }
    });
  });
</script>
<div id="edit_components" style="min-height:300px; height:auto !important;
                               height:300px; ">

<% if @processors.count>0 %>
  <p>
    <b> This workflow has <%= @processors.count %>
      <%= "Component".pluralize(@processors.count)%> </b>
  </p>
<p id="feedback">
  <span>You've selected:</span> <span id="select-result">none</span>.
</p>
<ol id="selectable">
<%if @sources.count > 0 %>
   <li class="ui-widget-content">
         <%= image_tag "taverna_lite/inputport.png", :size => "64x64", :alt => "input" %>
         <%= pluralize(@sources.count, "Input")%>
   <li>
 <% end %>
 <% for i in 0..@ordered_processors.count-1 %>
   <% item = @ordered_processors[i] %>
   <li class="ui-widget-content" id='<%= item.name%>'>
       <% componentname = item.name %>
       <% if item.type=="rshell" %>
         <%= image_tag "taverna_lite/rlogo.png", :size => "64x64", :alt => "R-Server",
             :class=>"componenticon"%>
       <%elsif item.type =="workflow"%>
         <%= image_tag "taverna_lite/nestedwf.png", :size => "64x64",
             :alt => "Workflow", :class=>"componenticon" %>
       <% elsif item.type=="stringconstant" %>
         <%= image_tag "taverna_lite/stringconstant.png", :size => "64x64",
            :alt => "constant", :class=>"componenticon" %>
       <%elsif item.type =="localworker"%>
         <%= image_tag "taverna_lite/localworker.png", :size => "64x64", :alt => "worker",
            :class=>"componenticon" %>
       <%elsif item.type =="interaction"%>
         <%= image_tag "taverna_lite/interaction.png", :size => "64x64", :alt =>"interaction",
             :class=>"componenticon" %>
       <%elsif item.type =="wsdl"%>
         <%= image_tag "taverna_lite/webservice.png", :size => "64x64", :alt => "WS",
             :class=>"componenticon" %>
       <%elsif item.type =="beanshell"%>
         <%= image_tag "taverna_lite/beanshell.png", :size => "64x64", :alt => "WS",
             :class=>"componenticon" %>
       <%elsif item.type =="component"%>
         <%= image_tag "taverna_lite/taverna-component-05.png", :size => "64x64", :alt => "WS",
             :class=>"componenticon" %>
       <%else%>
         <b> <%= item.type %> |</b>
       <% end %>
         <b> <%= label_tag componentname %> </b>
   </li>
 <% end %>
  <%if @sinks.count > 0 %>
    <li class="ui-widget-content" id='<%=pluralize(@sinks.count, "Output")%>'>
         <%= image_tag "taverna_lite/outputport.png", :size => "64x64", :alt => "output" %>
         <%=pluralize(@sinks.count, "Output")%>
    </li>
  <% end %>
</ol>
<% else %>
  <p>
    <b> This workflow has no components </b>
  </p>
<% end %>

</div>
