<% if @workflow.title.nil?
     wf_title="No Title"
   else
     wf_title = @workflow.title
   end
 %>
<% content_for :title, "BioVeL Portal - Workflow: " + wf_title %>

<h1><%= "Editing : " + wf_title%></h1>
<h2>Name: <%= @workflow.name %></h2>

<%= render :partial => 'workflow_tabs', :locals => {:workflow => @workflow} %>
<div title="Show workflow details" alt="Show workflow details" style="float:right">
  <%= link_to '<Back', main_app.workflow_path(@workflow), :class => "link_img" %>
</div>
<br/>
<%= javascript_tag do -%>
  <% if flash[:notice] == 'componet replaced' ||
        flash[:notice] == 'outputs updated' ||
        flash[:notice] == 'inputs updated' ||
        flash[:notice] == 'processor updated' %>
    $( "#tabs_wf_parts" ).tabs({ active: 1 });
  <% elsif flash[:notice] == 'errors updated' %>
    $( "#tabs_wf_parts" ).tabs({ active: 2 });
  <% else %>
    $("#tabs_wf_parts").tabs();
  <% end %>
<% end -%>

